@model Vidly.Models.Movie
@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Gen.Name</li>
    <li>Date Released: @Model.ReleaseDate.ToString("dd/MMM/yyyy")</li>
    <li>Date Added: @Model.DateAdded.ToString("dd/MMM/yyyy")</li>
    <li>Number In Stock: @Model.NumberInStock</li>
</ul>

